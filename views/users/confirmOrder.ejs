


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .order-header {
            background-color: #e7f3ff;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            color: #2874f0;
        }

        .order-header h4 {
            font-weight: bold;
            margin: 0;
        }

        .order-header p {
            margin: 5px 0 0;
        }

        .order-container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .order-container h5 {
            margin-bottom: 15px;
        }

        .order-container p {
            margin-bottom: 5px;
        }

        .order-summary img {
            max-width: 100px;
            margin-right: 20px;
        }

        .order-summary .item-details {
            flex-grow: 1;
        }

        .order-summary .price {
            font-weight: bold;
            font-size: 1.2em;
            text-align: right;
        }

        .btn-link {
            padding: 0;
            font-size: 0.9em;
            color: #2874f0;
        }

        .rewards-section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .rewards-section ul li {
            margin-bottom: 10px;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
        }

        .footer a {
            text-decoration: none;
            color: #fff;
            margin-bottom: 20px;
        }

        .more-actions .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .order-summary {
            display: flex;
            align-items: center;
            border-top: 1px solid #e2e2e2;
            padding-top: 20px;
            margin-top: 20px;
        }

        .order-summary .item-details p {
            margin: 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Order Header -->
        <div class="order-header text-center">
            <h4>Order placed for â‚¹<%= order.totalPrice  %>!</h4>
            <p>Your 1 item will be delivered by <strong>Sun, Aug 18th '24</strong>.</p>
        </div>

        <div class="row justify-content-center">
            <!-- Left Column -->
            <div class="col-md-8">
                <!-- Delivery Address -->
                <div class="order-container">
                    <h5>Delivery Address</h5>
                    <p><strong><%= order.address.Name  %></strong></p>
                    <p><%= order.address.address  %><br><%= order.address.city  %></p>
                    <p><%= order.address.Mobile  %></p>
                    <p>This order is also tracked by <%= order.address.Mobile  %></p>
                </div>

                <!-- Order Summary -->
                <div class="order-container">
                   <%  order.orderedItems.forEach(function (item){  %>
                    <div class="d-flex order-summary">
                        <img src="/uploadedImages/<%= item.productId.images[0]%>" alt="Product Image">
                        <div class="item-details">
                            <h5><%= item.productId.name%></h5>
                            <p><%= item.productId.strapColor%></p>
                            <!-- <p>Seller: CLIENTERecom</p> -->
                            <!-- <p><i class="bi bi-truck"></i> Delivery expected by Aug 18</p> -->
                        </div>
                         
                    </div>
                    <% }) %>

                    <!-- <p class="text-muted">Delivery requires an OTP</p> -->
                    <div class="d-flex justify-content-between">
                        <!-- <button class="btn btn-outline-danger">Cancel</button>                         -->
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <!-- <div class="col-md-4"> -->
                <!-- Rewards Section -->
                <!-- <div class="order-container rewards-section">
                    <h5>Your Rewards</h5>
                    <ul>
                        <li>12 SuperCoins Cashback</li>
                        <li>Early Access to this Sale</li>
                    </ul>
                </div> -->

                <!-- More Actions -->
                <!-- <div class="order-container more-actions">
                    <button class="btn btn-outline-primary">Prefer contactless delivery?</button>
                    <button class="btn btn-outline-primary">Pay Now</button>
                    <button class="btn btn-outline-primary">Manage</button>
                </div>
            </div> -->
        </div>

        <!-- Footer -->
        <div class="footer">
            <a href="/orders" class="btn btn-primary">Go to My Orders</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
